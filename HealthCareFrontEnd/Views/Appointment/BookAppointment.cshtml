@model BookAppointmentViewModel
@{
    Layout = "_HealthLayout";
}

<form asp-action="BookAppointment" method="post" role="form">
    <h3 class="my-5">
        Book Appointment
    </h3>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="col-6">
        <div class="row g-2">
            <div class="col-12">
                <label class="form-label">Health Professional</label>
                <select name="HealthCareProfessionalId" class="form-control" asp-items="@(new SelectList(ViewBag.HealthProffessionalsList, "Value", "Text"))">
                    <option value="-1">--Select--</option>
                </select>

            </div>

            <div class="col-12">
                <label asp-for="AppointmentStartTime" class="form-label"></label>
                <input asp-for="AppointmentStartTime" class="form-control" min="@DateTime.Now.ToString("yyyy-MM-ddThh:mm")" />
                <span asp-validation-for="AppointmentStartTime" class="text-danger"></span>
            </div>

           @*  <div class="col-12">
                <label asp-for="AppointmentEndTime" class="form-label"></label>
                <input asp-for="AppointmentEndTime" class="form-control" />
                <span asp-validation-for="AppointmentEndTime" class="text-danger"></span>
            </div> *@
        </div>

        <div class="mt-2">
            <div class="col-md-offset-2 col-md-5">
                <input type="submit" class="btn btn-secondary" value="Save" />
            </div>
        </div>
    </div>
</form>